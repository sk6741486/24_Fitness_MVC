@model IEnumerable<_24_Fitness_MVC.Models.Activities>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<img src="~/images/activity.jpg" />

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Activity Price
            </th>
            <th>
               Time Duration
            </th>
            <th>
                Trainer  Id
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Activity_Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time_Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trainer_Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
